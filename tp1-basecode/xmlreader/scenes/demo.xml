<lxs>
    <scene root="demoRoot" axis_length="5" />
    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>
    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>
    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>
    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>
    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>
    <transformations>
        <transformation id="floor">
            <translate x="-5" y="2" z="3"/>
            <!-- <scale x="5" y="1" z="5" /> -->
            <!-- <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" /> -->
        </transformation>
    </transformations>
    <primitives>
         <primitive id="Rectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive> 

        <!--  <primitive id ="Triangle">
            <triangle x1="2" y1="0" z1="0"
                      x2="4" y2="0" z2="0"
                      x3="3" y3="2" z3="0"/>
        </primitive>  -->

        <!--  <primitive id="Cylinder">
            <cylinder base="1" top="1" height="3.0" slices="10000" stacks="1" />
        </primitive>  -->

        <!--  <primitive id="Sphere">
            <sphere radius="1.0" slices="50" stacks="50" />
        </primitive>  -->

         <!-- <primitive id="Plane">
            <plane npartsU="20" npartsV="20" />
        </primitive>  -->
    </primitives>
    <components>

        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="1" />
                <scale x="2" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" />
            <children>
                <primitiveref id="Rectangle" />
                <primitiveref id="Triangle" />
                <primitiveref id="Cylinder" />
                <primitiveref id="Sphere" />
                <primitiveref id="Plane" />
            </children>
        </component>

        <component id="MyFloor">
            <transformation>
                <transformationref id="floor" />
            </transformation>
            <children>
                <componentref id="MyFloor" />
                <primitiveref id="Rectangle"/>
            </children>
        </component>

    </components>
</lxs>
<lxs>
	<scene root="demoRoot" axis_length="5" />

	<views default="defaultCamera">
		<perspective id="defaultCamera" near="0.1" far="500" angle="45">
			<from x="30" y="15" z="30" />
			<to x="0" y="-2" z="0" />
		</perspective>

		<!-- <ortho id="ortho" near="0.1" far="70" left="-10.0" right="10.0" top="10.0" bottom="-10.0">
			<from x="5" y="5" z="20" />
			<to x="5" y="5" z="0" />
		</ortho> -->
	</views>

	<ambient>
		<ambient r="0.2" g="0.2" b="0.2" a="1.0" />
		<background r="0.0" g="0.0" b="0.0" a="1.0" />
	</ambient>

	<lights>
		<omni id="demoLight" enabled="1">
			<location x="9.8" y="11.9" z="10" w="1.0" />
			<ambient r="0" g="0" b="0" a="1.0" />
			<diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
			<specular r="1.0" g="1.0" b="1.0" a="1.0" />
		</omni>
		<!-- 
		<spot id="spotLight" enabled="0" angle="30" exponent="5"> -->
		<!-- atencao, "target" e' diferente de "direction" -->
		<!-- <location x="1" y="1" z="1" w="0.0" />
			<target x="-1" y="0" z="0.5" />
			<ambient r="0.5" g="0.5" b="0.5" a="1" />
			<diffuse r="0.7" g="0.5" b="0.7" a="1.0" />
			<specular r="0.7" g="0.5" b="0.7" a="1.0" />
			<attenuation constant="0.05" linear="0.2" quadratic="0" />
		</spot> -->
	</lights>

	<textures>
		<texture id="court" file="scenes/images/court.jpg" />
		<texture id="ball" file="scenes/images/ball.jpg" />
		<texture id="ball2" file="scenes/images/ball2.jpg" />
		<texture id="screen" file="scenes/images/screen.jpg" />
		<texture id="sponsor" file="scenes/images/spalding.png" />
		<texture id="tabela" file="scenes/images/tabela.jpg" />
		<texture id="net" file="scenes/images/net.jpg" />
		<texture id="timeboard" file="scenes/images/timeboard.jpg" />
		<texture id="tabelaBack" file="scenes/images/tabelaBack.jpg" />

	</textures>

	<materials>
		<material id="demoMaterial" shininess="10">
			<emission r="0.0" g="0.0" b="0.0" a="1.0" />
			<ambient r="1.0" g="0.0" b="0.0" a="1.0" />
			<diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
			<specular r="0.0" g="0.0" b="0.0" a="1.0" />
		</material>

		<material id="ballMaterial" shininess="10">
			<emission r="0.4" g="0.4" b="0.4" a="1.0" />
			<ambient r="0.3" g="0.2" b="0.1" a="1.0" />
			<diffuse r="0.184" g="0.082" b="0.048" a="1.0" />
			<specular r="0.2" g="0.2" b="0.2" a="1.0" />
		</material>

		<material id="rimMaterial" shininess="10">
			<emission r="0.198" g="0.065" b="0.003" a="1.0" />
			<ambient r="0.198" g="0.065" b="0.003" a="1.0" />
			<diffuse r="0.198" g="0.065" b="0.003" a="1.0" />
			<specular r="0.198" g="0.065" b="0.003" a="1.0" />
		</material>

		<material id="blueMaterial" shininess="10">
			<emission r="0.025" g="0.058" b="0.122" a="1.0" />
			<ambient r="0.025" g="0.058" b="0.122" a="1.0" />
			<diffuse r="0.025" g="0.058" b="0.122" a="1.0" />
			<specular r="0.025" g="0.058" b="0.122" a="1.0" />
		</material>

		<material id="redMaterial" shininess="10">
			<emission r="0.199" g="0.019" b="0.043" a="1.0" />
			<ambient r="0.199" g="0.019" b="0.043" a="1.0" />
			<diffuse r="0.199" g="0.019" b="0.043" a="1.0" />
			<specular r="0.199" g="0.019" b="0.043" a="1.0" />
		</material>

		<material id="whiteMaterial" shininess="100">
			<emission r="0.5" g="0.5" b="0.5" a="1.0" />
			<ambient r="0.8" g="0.8" b="0.8" a="1.0" />
			<diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
			<specular r="1" g="1" b="1" a="1.0" />
		</material>

		<material id="floorMaterial" shininess="5">
			<emission r="0.5" g="0.5" b="0.5" a="1.0" />
			<ambient r="0.228" g="0.207" b="0.178" a="1.0" />
			<diffuse r="0.228" g="0.207" b="0.178" a="1.0" />
			<specular r="0.228" g="0.207" b="0.178" a="1.0" />
		</material>
	</materials>

	<transformations>
		<transformation id="court">
			<rotate axis="y" angle="90" />
			<scale x="18" y="1" z="10" />
			<rotate axis="x" angle="-90" />
		</transformation>
		<!-- 
		<transformation id="court">
			<scale x="8" y="1" z="8" />
			<rotate axis="x" angle="-90" />
		</transformation> -->

		<transformation id="ball">
			<translate x="-1" y="0.2" z="3" />
			<scale x="0.2" y="0.2" z="0.2" />
		</transformation>

		<transformation id="screens">
			<translate x="0" y="4" z="0" />
			<rotate axis="x" angle="-90" />
			<scale x="1.5" y="1.5" z="0.5" />
		</transformation>

		<transformation id="net">
			<translate x="-0.19" y="2.2" z="4.8" />
			<rotate axis="x" angle="-90" />
			<rotate axis="z" angle="45" />
		</transformation>

		<transformation id="tabelaFront">
			<translate x="-0.19" y="3" z="5" />
			<rotate axis="x" angle="180" />
			<rotate axis="z" angle="90" />
		</transformation>

		<transformation id="tabelaBack">
			<translate x="-0.19" y="3" z="5.1" />
			<!-- RETIRAR LINHA 136	 -->
			<!-- <rotate axis="x" angle="180" /> -->
			<rotate axis="z" angle="270" />
		</transformation>

		<transformation id="tabelaSides">
			<scale x="1.5" y="1" z="1" />
			<translate x="-0.12" y="3" z="5" />
			<rotate axis="z" angle="45" />
		</transformation>

		<transformation id="basketBase">
			<translate x="-0.19" y="0.5" z="6.8" />
			<!-- <rotate axis="x" angle="-90" /> -->
			<rotate axis="x" angle="10" />
			<rotate axis="z" angle="45" />
		</transformation>

		<transformation id="baseRectangle">
			<translate x="-0.19" y="0.18" z="8.62" />
			<rotate axis="x" angle="10" />
		</transformation>

		<transformation id="basketHeight">
			<translate x="-0.2" y="0" z="7.1" />
			<rotate axis="x" angle="-90" />
			<rotate axis="z" angle="45" />
		</transformation>
	</transformations>

	<primitives>
		<primitive id="Rectangle">
			<rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
		</primitive>

		<primitive id="Triangle">
			<triangle x1="2" y1="0" z1="0" x2="4" y2="0" z2="0" x3="3" y3="2" z3="0" />
		</primitive>
		<primitive id="Sphere">
			<sphere radius="1.0" slices="30" stacks="30" />
		</primitive>

		<primitive id="Plane">
			<plane npartsU="100" npartsV="100" />
		</primitive>

		<primitive id="Patch">
			<patch npointsU="3" npointsV="4" npartsU="5" npartsV="3">
				<controlpoint xx="-1.5" yy="-1.5" zz="0.0" />
				<controlpoint xx="-2.0" yy="-2.0" zz="2.0" />
				<controlpoint xx="-2.0" yy="2.0" zz="2.0" />
				<controlpoint xx="-1.5" yy="1.5" zz="0.0" />
				<controlpoint xx="0.0" yy="0.0" zz="3.0" />
				<controlpoint xx="0.0" yy="-2.0" zz="3.0" />
				<controlpoint xx="0.0" yy="2.0" zz="3.0" />
				<controlpoint xx="0.0" yy="0.0" zz="3.0" />
				<controlpoint xx="1.5" yy="-1.5" zz="0.0" />
				<controlpoint xx="2.0" yy="-2.0" zz="2.0" />
				<controlpoint xx="2.0" yy="2.0" zz="2.0" />
				<controlpoint xx="1.5" yy="1.5" zz="0.0" />
			</patch>
		</primitive>

		<!-- ECRAS -->
		<primitive id="Screens">
			<cylinder base="1" top="1.25" height="3.0" slices="6" stacks="1" />
		</primitive>

		<!-- TABELA DE BASKET -->
		<primitive id="basketBase">
			<cylinder base="0.7" top="0.2" height="1.85" slices="4" stacks="1" />
		</primitive>

		<primitive id="baseRectangle">
			<rectangle x1="-0.15" y1="-0.15" x2="0.15" y2="0.15" />
		</primitive>

		<primitive id="basketHeight">
			<cylinder base="0.5" top="0.35" height="2.5" slices="4" stacks="1" />
		</primitive>

		<primitive id="tabela">
			<rectangle x1="-0.45" y1="-0.7" x2="0.45" y2="0.7" />
		</primitive>

		<primitive id="tabelaSides">
			<cylinder base="0.64" top="0.64" height="0.1" slices="4" stacks="1" />
		</primitive>

		<primitive id="net">
			<cylinder base="0.12" top="0.2" height="0.4" slices="100" stacks="1" />
		</primitive>

		<!-- CHAIR -->
		<primitive id="chairRectangle">
			<rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
		</primitive>

		<primitive id="leg">
			<cylinder base="0.1" top="0.1" height="1" slices="100" stacks="1" />
		</primitive>
	</primitives>

	<components>

		<component id="test">
			<transformation>
				<translate x="0" y="0" z="0" />
			</transformation>
			<materials>
				<material id="floorMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="Patch" />
			</children>
		</component>

		<!-- CHAIR -->
		<component id="leg1">
			<transformation>
				<translate x="-0.4" y="0" z="-0.9" />
				<rotate axis="x" angle="90" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="leg" />
			</children>
		</component>
		<component id="leg2">
			<transformation>
				<translate x="0.4" y="0" z="-0.9" />
				<rotate axis="x" angle="90" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="leg" />
			</children>
		</component>
		<component id="leg3">
			<transformation>
				<translate x="-0.4" y="0" z="0.9" />
				<rotate axis="x" angle="90" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="leg" />
			</children>
		</component>
		<component id="leg4">
			<transformation>
				<translate x="0.4" y="0" z="0.9" />
				<rotate axis="x" angle="90" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="leg" />
			</children>
		</component>
		<component id="chairSeat">
			<transformation>
				<scale x="0.2" y="0.5" z="0.1" />
				<rotate axis="x" angle="90" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="chairRectangle" />
			</children>
		</component>
		<component id="chairSeat2">
			<transformation>
				<scale x="0.2" y="0.5" z="0.1" />
				<rotate axis="x" angle="-90" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" /> <!--para mostrar que ignora os valores -->
			<children>
				<primitiveref id="chairRectangle" />
			</children>
		</component>
		<component id="chairBack">
			<transformation>
				<translate x="0" y="0.15" z="0.1" />
				<scale x="0.2" y="0.15" z="0.1" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="chairRectangle" />
			</children>
		</component>
		<component id="chairBack2">
			<transformation>
				
				<translate x="0" y="0.15" z="0.1" />
				<scale x="0.2" y="0.15" z="0.1" />
				<rotate axis="y" angle="180" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" /> <!--para mostrar que ignora os valores -->
			<children>
				<primitiveref id="chairRectangle" />
			</children>
		</component>
		<component id="chair">
			<transformation>
				<scale x="2" y="1.7" z="2" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<componentref id="chairSeat" />
				<componentref id="chairSeat2" />
				<componentref id="chairBack" />
				<componentref id="chairBack2" />
				<componentref id="leg1" />
				<componentref id="leg2" />
				<componentref id="leg3" />
				<componentref id="leg4" />
			</children>
		</component>


		<!-- NET -->
		<component id="net">
			<transformation>
				<transformationref id="net" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="net" />
			<children>
				<primitiveref id="net" />
			</children>
		</component>

		<!-- Parte da lado tabela -->
		<component id="tabelaSides">
			<transformation>
				<transformationref id="tabelaSides" />
			</transformation>
			<materials>
				<material id="floorMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="tabelaSides" />
			</children>
		</component>

		<!-- Parte da frente tabela -->
		<component id="tabelaFront">
			<transformation>
				<transformationref id="tabelaFront" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="tabela" length_s="0.9" length_t="1.5" />
			<children>
				<primitiveref id="tabela" />
			</children>
		</component>

		<!-- Parte de trás tabela -->
		<component id="tabelaBack">
			<transformation>
				<transformationref id="tabelaBack" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="tabelaBack" length_s="0.9" length_t="1.5" />
			<children>
				<primitiveref id="tabela" />
			</children>
		</component>

		<!-- BASE DA TABELA -->
		<component id="basketBase">
			<transformation>
				<transformationref id="basketBase" />
			</transformation>
			<materials>
				<material id="blueMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="basketBase" />
			</children>
		</component>

		<!-- RETANGULO DA BASE -->
		<component id="baseRectangle">
			<transformation>
				<transformationref id="baseRectangle" />
			</transformation>
			<materials>
				<material id="blueMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="baseRectangle" />
			</children>
		</component>

		<!-- COLUNA DA TABELA  -->
		<component id="basketHeight">
			<transformation>
				<transformationref id="basketHeight" />
			</transformation>
			<materials>
				<material id="blueMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<primitiveref id="basketHeight" />
			</children>
		</component>


		<!-- TABELA -->
		<component id="basket">
			<transformation>
				<translate x="0" y="0" z="0.45" />
			</transformation>
			<materials>
				<material id="floorMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<componentref id="basketBase" />
				<componentref id="basketHeight" />
				<componentref id="baseRectangle" />
				<componentref id="tabelaFront" />
				<componentref id="tabelaBack" />
				<componentref id="tabelaSides" />
				<componentref id="net" />
			</children>
		</component>


		<!-- ECRÃS -->
		<component id="screens">
			<transformation>
				<transformationref id="screens" />
			</transformation>
			<materials>
				<material id="whiteMaterial" />
			</materials>
			<texture id="screen" length_s="1" length_t="100000" />
			<children>
				<primitiveref id="Screens" />
			</children>
		</component>

		<!-- BOLA -->
		<component id="ball">
			<transformation>
				<transformationref id="ball" />
			</transformation>
			<materials>
				<material id="ballMaterial" />
			</materials>
			<texture id="ball2" length_s="100000" length_t="1000000" />
			<children>
				<primitiveref id="Sphere" />
			</children>
		</component>

		<!-- CHÃO -->
		<component id="floor">
			<transformation>
				<transformationref id="court" />
			</transformation>
			<materials>
				<material id="floorMaterial" />
			</materials>
			<texture id="court" length_s="1" length_t="2" />
			<children>
				<primitiveref id="Plane" />
			</children>
		</component>

		<component id="demoRoot">
			<transformation>
				<translate x="0" y="0" z="0" />
				<scale x="1" y="1" z="1" />
			</transformation>
			<materials>
				<material id="floorMaterial" />
			</materials>
			<texture id="none" />
			<children>
				<!-- <primitiveref id="Patch"/> -->
				<componentref id="test" />
				<componentref id="floor" />
				<componentref id="ball" />
				<componentref id="screens" />
				<componentref id="basket" />
				<componentref id="chair" />
			</children>
		</component>

	</components>
</lxs>
<SXG>
    <scene root="demoRoot" axis_length="5" /> <!-- deve definir-se um objeto para raiz da arvore, assim -->
    <!-- como o comprimento dos tres eixos (cilindros) -->

    <!-- ___________________________________VIEWS______________________________________ -->
    <views default="overView">
        <!-- at least one of the following type of cameras must be declared -->

        <!-- Vista Geral - default -->
        <perspective id="overView" near="0.1" far="500" angle="45">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>

        <!-- Vista de lado -->
        <perspective id="sideView" near="0.1" far="500" angle="45">
            <from x="17" y="7" z="0" />
            <to x="0" y="4" z="0" />
        </perspective>

        <!-- Vista de cima -->
        <perspective id="topView" near="0.1" far="500" angle="90">
            <from x="0" y="12" z="0" />
            <to x="-1" y="0" z="0" />
        </perspective>

        <!--Vista do meio campo para o cesto da esquerda -->
        <perspective id="basketView" near="0.1" far="500" angle="45">
            <from x="0" y="1" z="-5" />
            <to x="0" y="3" z="4" />
        </perspective>

        <!-- Vista que um fã teria de uma cadeira para os ecrãs gigantes e para o cesto -->
        <perspective id="fanView" near="0.8" far="100" angle="45">
            <from x="10.5" y="2" z="-5" />
            <to x="0" y="5" z="0" />
        </perspective>

        <!-- Vista "ortho" dos ecrãs gigantes -->
        <ortho id="orthoScreenView" near="0.1" far="500" left="-3.0" right="3.0" top="3.0" bottom="-3.0">
            <from x="6" y="4" z="6" />
            <to x="0" y="5" z="0" />
        </ortho>

    </views>

    <ambient>
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" /> <!-- global ambient -->
        <background r="0.2" g="0.2" b="0.2" a="1.0" /> <!-- background color -->
    </ambient>
    <!-- ___________________________________LIGHTS______________________________________ -->
    <lights>
        <!-- this block "light" must be repeated as necessary with different "id". At least one light should be present, and a maximum of eight lights is accepted. -->
        <omni id="RightFarLight" enabled="1">
            <!-- light identifier; enable/disable -->
            <location x="-5" y="8" z="-12" w="1.0" /> <!-- light location; w=1: point light; w=0: directional light -->
            <ambient r="0" g="0" b="0" a="1.0" /> <!-- ambient component -->
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" /> <!-- diffuse component -->
            <specular r="1" g="1" b="1" a="1.0" /> <!-- specular component -->
        </omni>

        <omni id="RightNearLight" enabled="1">
            <location x="5" y="8" z="-12" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </omni>

        <omni id="LeftNearLight" enabled="1">
            <location x="5" y="8" z="12" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </omni>

        <omni id="LeftFarLight" enabled="1">
            <location x="-5" y="8" z="12" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </omni>

        <omni id="CenteredLight" enabled="1">
            <location x="0" y="14" z="0" w="0.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <spot id="spotLight" enabled="1" angle="90" exponent="50">

            <location x="0" y="4" z="0" w="0.0" />
            <target x="-0.5" y="3" z="12" />
            <ambient r="0.5" g="0.5" b="0.5" a="1" />
            <diffuse r="0.7" g="0.7" b="0.7" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </spot>

    </lights>
    <!-- ___________________________________TEXTURES______________________________________ -->
    <textures>
        <!-- this block "TEXTURE" must be repeated as necessary with different "id" -->
        <texture id="trackBackground" file="./scenes/images/trackbackground.png" />

    </textures>
    <!-- ___________________________________MATERIALS______________________________________ -->
    <materials>
        <!-- the "MATERIAL" block may be repeated as required. Each defined material
         requires a distinct "id". At least one material should be present. -->
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" /> <!-- emissive component -->
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" /> <!-- ambient reflection -->
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" /> <!-- diffuse reflection -->
            <specular r="0.0" g="0.0" b="0.0" a="1.0" /> <!-- specular reflection -->
        </material>

        <material id="ballMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.3" g="0.2" b="0.1" a="1.0" />
            <diffuse r="0.184" g="0.082" b="0.048" a="1.0" />
            <specular r="0.7" g="0.7" b="0.7" a="1.0" />
        </material>

        <material id="rimMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.35" g="0.35" b="0.35" a="1.0" />
            <specular r="0" g="0" b="0" a="1.0" />
        </material>

        <material id="blueMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.015" g="0.0" b="0.167" a="1.0" />
            <diffuse r="0.037" g="0.037" b="0.047" a="1.0" />
            <specular r="0.057" g="0" b="0" a="1.0" />
        </material>

        <material id="blueMaterialBase" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.015" g="0.0" b="0.167" a="1.0" />
            <diffuse r="0.037" g="0.037" b="0.047" a="1.0" />
            <specular r="0.0" g="0" b="0" a="1.0" />
        </material>

        <material id="redMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.199" g="0.019" b="0.043" a="1.0" />
            <diffuse r="0.199" g="0.019" b="0.043" a="1.0" />
            <specular r="0.228" g="0.207" b="0.178" a="1.0" />
        </material>

        <material id="darkGreyMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.164" g="0" b="0.042" a="1.0" />
        </material>

        <material id="whiteMaterial" shininess="100">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.255" g="0.255" b="0.255" a="1.0" />
            <specular r="0.7" g="0.7" b="0.7" a="1.0" />
        </material>

        <material id="screenMaterial" shininess="100">
            <emission r="0.8" g="0.8" b="0.8" a="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </material>

        <material id="floorMaterial" shininess="50">
            <emission r="0" g="0" b="0" a="1.0" />
            <ambient r="0.228" g="0.207" b="0.178" a="1.0" />
            <diffuse r="0.228" g="0.207" b="0.178" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>
    <!-- ___________________________________TRANSFORMATIONS______________________________________ -->
    <transformations>
        <!-- the "transformations" block may be repeated as required. Each defined transformation
         requires a distinct "id". At least one material should be present. -->
        <transformation id="court">
            <rotate axis="y" angle="90" />
            <scale x="512" y="1" z="512" />
            <rotate axis="x" angle="-90" />
        </transformation>


    </transformations>
    <!-- ___________________________________PRIMITIVES______________________________________ -->
    <primitives>
        <!-- the "primitives" block may be repeated as required. Each defined primitive
		requires a distinct "id". At least one material should be present. -->
        <primitive id="Rectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="Triangle">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2="0" x3="0.5" y3="1.1" z3="0" />
        </primitive>

        <primitive id="Sphere">
            <sphere radius="1.0" slices="30" stacks="30" />
        </primitive>

        <primitive id="Plane">
            <plane npartsU="100" npartsV="100" />
        </primitive>

        <primitive id="topScreen">
            <patch npointsU="4" npointsV="4" npartsU="3" npartsV="3">
                <controlpoint xx="-1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="0.0" zz="-1.3333333333333333" />
                <controlpoint xx="1" yy="0.0" zz="-1.3333333333333333" />
                <controlpoint xx="1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="1.1547005383792515" zz="-0.6666666666666667" />
                <controlpoint xx="1" yy="1.1547005383792515" zz="-0.6666666666666667" />
                <controlpoint xx="1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="1.1547005383792515" zz="0.6666666666666663" />
                <controlpoint xx="1" yy="1.1547005383792515" zz="0.6666666666666663" />
                <controlpoint xx="1" yy="0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="1.6328623988631375e-16" zz="1.3333333333333333" />
                <controlpoint xx="1" yy="1.6328623988631375e-16" zz="1.3333333333333333" />
                <controlpoint xx="1" yy="0.0" zz="0.0" />
            </patch>
        </primitive>


        <primitive id="rimSupport">
            <cylinder base="0.03" top="0.03" height="0.15" slices="4" stacks="1" />
        </primitive>

     
    </primitives>
    <!-- ___________________________________COMPONENTS______________________________________ -->
    <components>
        <!-- Uma "component" e' um objeto composto e pode ser -->
        <!-- usada em nos intermédios -->
        <!-- bloco "transformation" e' obrigatorio -->


        <!-- CHÃO -->
        <component id="floor">
            <transformation>
                <transformationref id="court" />
            </transformation>
            <materials>
                <material id="floorMaterial" />
            </materials>
            <texture id="trackBackground" length_s="1" length_t="2" />
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>

        <component id="carbody">
            <transformation>
                <translate x="4.5" y="0.35" z="0.5" />
                <rotate axis="y" angle="90" />
                <scale x="2" y="1.7" z="2" />
            </transformation>
            <materials>
                <material id="darkGreyMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <primitiveref id="Plane" />
            </children>
        </component>

        <!-- Component Root onde são chamados todos os outros componentes  -->
        <!-- ROOT -->
        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="floorMaterial" />
            </materials>
            <texture id="none" />
            <children>
                <componentref id="floor" />
            </children>
        </component>

    </components>
</SXG>